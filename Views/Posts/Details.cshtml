                    <input type="text" name="Body">
                    <input type="submit" value="Create" class="btn btn-default">
                </form>
            </div>
        </div>
        <div class="post-comment">

        </div>
    </div>
    <div class="row " style="margin-left: 10px;">
        <div class="post-comment">
            @foreach (var c in Model.Comments)
            {
                <dl class="dl-horizontal">
                    <dt>
                        Comment
                    </dt>
                    <dd>
                        @c.Body
                    </dd>

                    <dt>
                        Comment Date
                    </dt>
                    <dd>
                        @c.Created.ToString("d")
                    </dd>

                    <dt>
                        Author
                    </dt>
                    <dd>
                        @c.Author.Email
                    </dd>
                </dl>


                    @Html.ActionLink("Delete", "Delete", "Comments", new { id = c.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Edit", "Edit", "Comments", new { id = c.Id }, new { @class = "btn btn-default" })
            }

        </div>
    </div>









<footer id="footer">
