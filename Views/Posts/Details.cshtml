
@using Portfolio_v2.Controllers
@using Portfolio_v2.Models
@model Portfolio_v2.Models.Post

@{
    ViewBag.Title = "Details";
}


<section style="background-color:#ffe401;margin-right: 70px;border-left-width: 50px;padding-left: 0px;margin-left: 70px;" id="blog-details">
    <div class="container-fluid">
        <div class="row blog-item">
            <div class="col-sm-2 text-center">
                <p class="date">
                    <span>@Model.Created</span>
                </p>
            </div>
        </div>

        <div class="col-sm-12 blog-content">

            <h2>BLOG POST</h2>
            <div class="entry-meta">
                <a @*class="black-text fa fa-user"*@ href="/Posts/Edit/17" style="color:black">Posted by Admin</a>
                <a style="color:black" href="/Blog/working-blog">Working Blog</a>

            </div>
        </div>
        <div style="color: #000" class="entry-post">
            <p>I am doing a final run thru to check to see if my blog is working before the big interview day.</p>
        </div>
        <div class="social-share">

        </div>
        <div class="comments-login">
            <div class="col-md-6">
                <form action="/Comments/Create" enctype="Multipart/form-data" method="post">
